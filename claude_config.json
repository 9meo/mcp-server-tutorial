{
  "mcpServers": {
    "weather": {
      "command": "uv",
      "args": ["run", "--directory", "/absolute/path/to/weather-mcp", "python", "weather_server.py"],
      "env": {
        "SSL_VERIFY": "false"
      }
    }
  }
}

